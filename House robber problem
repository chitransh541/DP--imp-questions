House robber problem recursive approach..
class Solution {
    public int helper(int idx,int[] nums,int n)
    {
        if(idx>=n)
        {
            return 0;
        }
        int pick = nums[idx]+helper(idx+2,nums,n);
        int notpick = helper(idx+1,nums,n);
        return Math.max(pick,notpick);
    }
    public int rob(int[] nums) {
        int n = nums.length;
        return helper(0,nums,n);
    }
}
// optimize this recursive approach using memoization..

class Solution {
    public int helper(int idx,int[] nums,int n,int[] dp)
    {
        if(idx>=n)
        {
            return 0;
        }
        if(dp[idx]!=-1)
        {
            return dp[idx];
        }
        int pick = nums[idx]+helper(idx+2,nums,n,dp);
        int notpick = helper(idx+1,nums,n,dp);
        dp[idx] =  Math.max(pick,notpick);
        return dp[idx];
    }
    public int rob(int[] nums) {
        int n = nums.length;
        int[] dp = new int[n];
        for(int i=0;i<n;i++)
        {
           dp[i] = -1;
        }
        return helper(0,nums,n,dp);
    }
}
